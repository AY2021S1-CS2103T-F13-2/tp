<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
        <VBox prefHeight="631.0" prefWidth="471.0">
            <HBox>
               <children>
                  <Label fx:id="welcomeHelp" alignment="CENTER" minHeight="-Infinity" prefHeight="57.0" prefWidth="389.0" text="Label" wrapText="true" />
               <Button fx:id="copyButton" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         <HBox alignment="CENTER">
            <children>
                <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" hvalue="1.0" vvalue="1.0" HBox.hgrow="ALWAYS" styleClass="edge-to-edge">
                     <content>
                        <VBox fx:id="helpContainer" />
                     </content></ScrollPane>
            </children>
            <opaqueInsets>
               <Insets bottom="10.0" left="5.0" top="5.0" />
            </opaqueInsets>
            <padding>
               <Insets bottom="10.0" left="5.0" top="5.0" />
            </padding>
         </HBox>
        </VBox>
    </Scene>
  </scene>
</fx:root>
